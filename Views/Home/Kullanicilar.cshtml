@model List<GorevYoneticisi.Models.kullanicilar>
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_LayoutIc.cshtml";
}

<div class="top">
    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
    <h2>Kullanıcılar</h2>
</div>

<div class="ilan-list">
    <a id="yeni-uye" href="@Url.Action("Kullanici")" data-toggle="tooltip" title="Yeni Kullanıcı Ekle">+</a>
    <div class="head clearfix">
        <h4 class="col-lg-4 col-md-4">AD SOYAD</h4>
        <h4 class="col-lg-3 col-md-3">E-MAIL</h4>
        <h4 class="col-lg-3 col-md-3">DURUM</h4>
        <h4 class="col-lg-2 col-md-2"></h4>
    </div>
    @foreach (GorevYoneticisi.Models.kullanicilar user in Model)
    {
        <div class="satir clearfix">
            <div class="col-lg-4 col-md-4">@Html.Raw(user.ad + " " + user.soyad)</div>
            <div class="col-lg-3 col-md-3">@Html.Raw(user.email)</div>
            <div class="col-lg-3 col-md-3">@Html.Raw(GorevYoneticisi.Tools.durumlar.getDurum(user.flag))</div>
            <div class="col-lg-2 col-md-2" style="margin-top:-5px;">
                <a id="teklif-button" href="@Html.Raw(Url.Action("Kullanici", new { id = user.url }))"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a id="wrong-button" href="#" data-id="@Html.Raw(user.url)"><i class="fa fa-times" aria-hidden="true"></i></a>
            </div>
        </div>

    }
</div>

<script type="text/javascript">
    function sil(id) {
        $.ajax({
            url: "@Url.Action("silKullanici")",
            data: { id: id },
            dataType: "json",
            type: "POST",
            success: function (data) {
                location.reload();
            }
        });
    }
    $(document).on("click", "#wrong-button", function (e) {
        e.preventDefault();
        sil($(this).data("id"));
    });
</script>


