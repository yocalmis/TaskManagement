@model List<GorevYoneticisi.Models.proje_surec>
@{
    ViewBag.Title = "Süreçler";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="top">
    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
    <h2>Süreçler</h2>
</div>

<div class="ilan-list">
    <div class="head clearfix">
        <h4 class="col-sm-3">SÜREÇ İSMİ</h4>
        <h4 class="col-sm-2">TAMAMLANMA YÜZDESİ</h4>
        <h4 class="col-sm-2">BAŞLANGIÇ TARİHİ</h4>
        <h4 class="col-sm-2">BİTİŞ TARİHİ</h4>
        <h4 class="col-sm-1">DURUM</h4>
        <h4 class="col-sm-2"></h4>
    </div>
    @foreach (GorevYoneticisi.Models.proje_surec prj in Model)
    {
        <div class="satir clearfix">
            <div class="col-sm-3">@Html.Raw(prj.isim)</div>
            <div class="col-sm-2">% @Html.Raw(prj.yuzde)</div>
            <div class="col-sm-2">@Html.Raw(prj.baslangic_tarihi.ToString("dd.MM.yyyy"))</div>
            <div class="col-sm-2">@Html.Raw(prj.bitis_tarihi.ToString("dd.MM.yyyy"))</div>
            <div class="col-sm-1">@Html.Raw(GorevYoneticisi.Tools.TamamlamaDurumlari.getTamamlamaDurum(prj.durum))</div>
            <div class="col-sm-2" style="margin-top:-5px;">
                <a id="teklif-button" href="@Html.Raw(Url.Action("SurecBilgisi", new { id = prj.url }))"><i class="fa fa-pencil" aria-hidden="true"></i></a>
            </div>
        </div>

    }
</div>




