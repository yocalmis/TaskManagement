 @model GorevYoneticisi.Models.firma_musavir
@{
    ViewBag.Title = "Firma/Müşavir Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="top">
    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
    <h2>Firma/Müşavir Düzenle</h2>
</div>
    <form class="form-default" id="_form">
        <div class="clearfix">
            <input id="url" name="url" type="hidden" value="@Model.url">
            <div class="item col-md-6">
                <div class="lbl">Firma Tür</div>
                <select name="fm_tur">
                    <option value="@GorevYoneticisi.Tools.FirmaMusavirTur.firma" @((Model.fm_tur == GorevYoneticisi.Tools.FirmaMusavirTur.firma) ? "selected" : "")>Firma</option>
                    <option value="@GorevYoneticisi.Tools.FirmaMusavirTur.musavir" @((Model.fm_tur == GorevYoneticisi.Tools.FirmaMusavirTur.musavir) ? "selected" : "")>Müşavir</option>
                </select>
            </div>
            <div class="item col-md-6">
                <div class="lbl">Firma Adı</div>
                <input type="text" name="firma_adi" placeholder="Firma Adı" required value="@Html.Raw(Model.firma_adi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Müşteri No</div>
                <input type="text" name="musteri_no" placeholder="Müşteri No" required value="@Html.Raw(Model.musteri_no)" />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Üyelik Başlangıcı</div>
                <input type="date" name="baslangic_tarihi" placeholder="Üyelik Başlangıcı" value="@Html.Raw(Model.baslangic_tarihi.ToString("yyyy-MM-dd"))" required />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Üyelik Bitişi</div>
                <input type="date" name="bitis_tarihi" placeholder="Üyelik Bitişi" value="@Html.Raw(Model.bitis_tarihi.ToString("yyyy-MM-dd"))" required />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Vergi Dairesi</div>
                <input type="text" name="vergi_dairesi" placeholder="Vergi Dairesi" required value="@Html.Raw(Model.vergi_dairesi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Vergi No</div>
                <input type="text" name="vergi_no" placeholder="Vergi Numarası" required value="@Html.Raw(Model.vergi_no)" />
            </div>
            <div class="item">
                <div class="lbl">Çalışan Konum Alma Aralığı(Dakika)</div>
                <input type="number" min="1" max="30" name="konum_periyot" placeholder="Çalışan Konum Alma Aralığı(Dakika)" value="@Html.Raw(Model.konum_periyot)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Kullanıcı Sayısı</div>
                <input type="number" min="0" name="kullanici_sayisi" placeholder="Kullanıcı Sayısı" required value="@Html.Raw(Model.kullanici_sayisi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Müşteri Sayısı</div>
                <input type="number" min="0" name="musteri_sayisi" placeholder="Müşteri Sayısı" required value="@Html.Raw(Model.musteri_sayisi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Görev Sayısı</div>
                <input type="number" min="0" name="gorev_sayisi" placeholder="Görev Sayısı" required value="@Html.Raw(Model.gorev_sayisi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Süreç Sayısı</div>
                <input type="number" min="0" name="surec_sayisi" placeholder="Süreç Sayısı" required value="@Html.Raw(Model.surec_sayisi)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Proje Sayısı</div>
                <input type="number" min="0" name="proje_sayisi" placeholder="Proje Sayısı" required value="@Html.Raw(Model.proje_sayisi)" />
            </div>

            <div class="item col-md-6">
                <div class="lbl">E-Mail</div>
                <input type="text" name="firma_mail" placeholder="e-Mail Adresi" value="@Html.Raw(Model.firma_mail)" required />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Mail Port</div>
                <input type="text" name="mail_port" placeholder="Mail Port" value="@Html.Raw(Model.mail_port)" />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Mail SSL</div>
                <select name="mail_ssl">
                    <option value="true" @(Model.mail_ssl.Equals("true") ? "selected" : "")>true</option>
                    <option value="false" @(Model.mail_ssl.Equals("false") ? "selected" : "")>false</option>
                </select>
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Mail Host</div>
                <input type="text" name="mail_host" placeholder="Mail Host" value="@Html.Raw(Model.mail_host)" />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Mail Şifresi</div>
                <input type="text" name="mail_pass" placeholder="Mail Şifresi" value="@Html.Raw(Model.mail_pass)" />
            </div>
            <div class="item col-sm-6">
                <div class="lbl">Sms Başlığı</div>
                <input type="text" maxlength="11" name="sms_header" placeholder="Sms Başlığı" value="@Html.Raw(Model.sms_header)" />
            </div>
            <div class="item col-md-6">
                <div class="lbl">Açıklama</div>
                <textarea name="aciklama" placeholder="Açıklama">@Html.Raw(Model.aciklama)</textarea>
            </div>
            <div class="item col-md-6">
                <div class="lbl">Adres</div>
                <textarea name="adres" placeholder="Adres" required>@Html.Raw(Model.adres)</textarea>
            </div>
        </div>
        <div class="item" style="text-align:right;">
            <button class="btn-first">GÖNDER</button>
        </div>
    </form>
<script type="text/javascript">
    $(function () {
        $('#_form').validate({
            rules: {
                email: { email: true }
            },
            submitHandler: function (form) {
                user_send($(form));
            }
        });
    });
    function user_send(form) {
        $.post('@Url.Action("editFirmaMusavir", "FirmaMusavir")', form.serialize(), function (data) {
            if (data.IsSuccess == true) {
                alert("Firma bilgileri güncellenmiştir.");
            }
            else {
                alert(data.Message);
            }
        });
    }
</script>