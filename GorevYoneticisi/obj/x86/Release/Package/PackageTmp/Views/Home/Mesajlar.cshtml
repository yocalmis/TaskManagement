@model List<GorevYoneticisi.Models.MesajlarDetayModel>
@{
    ViewBag.Title = "Mesajlar";
    Layout = "~/Views/Shared/_LayoutIc.cshtml";
}

<div class="top">
    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
    <h2>Mesajlar</h2>
</div>

<div class="ilan-list">
    <a id="yeni-uye" href="@Url.Action("Mesaj")" data-toggle="tooltip" title="Yeni Mesaj">+</a>
    <div class="head clearfix">
        <h4 class="col-sm-4">MESAJ</h4>
        <h4 class="col-sm-2">KİME</h4>
        <h4 class="col-sm-2">TARİH</h4>
        <h4 class="col-sm-2">DURUM</h4>
        <h4 class="col-sm-2"></h4>
    </div>
    @foreach (GorevYoneticisi.Models.MesajlarDetayModel msj in Model)
    {
        <div class="satir clearfix">
            <div class="col-sm-4">@Html.Raw(GorevYoneticisi.Tools.OurFunctions.ourSubString(msj.mesaj,150))</div>
            <div class="col-sm-2">@Html.Raw(msj.ad + " " + msj.soyad)</div>
            <div class="col-sm-2">@Html.Raw(msj.date.ToString("dd.MM.yyyy"))</div>
            <div class="col-sm-2">@Html.Raw(GorevYoneticisi.Tools.durumlar.getDurum(msj.flag))</div>
            <div class="col-sm-2" style="margin-top:-5px;">
                <a id="teklif-button" href="@Html.Raw(Url.Action("Mesaj", new { id = msj.url }))"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a id="wrong-button" href="#" data-id="@Html.Raw(msj.url)"><i class="fa fa-times" aria-hidden="true"></i></a>
            </div>
        </div>

    }
</div>

