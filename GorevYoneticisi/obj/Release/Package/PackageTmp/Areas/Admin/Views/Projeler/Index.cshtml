@model List<GorevYoneticisi.Models.proje_surec>
@{
    ViewBag.Title = "Projeler";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="top">
    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
    <h2>Projeler</h2>
</div>

<div class="ilan-list">
    <div class="head clearfix">
        <h4 class="col-sm-2 col-xs-3">PROJE İSMİ</h4>
        <h4 class="col-sm-2 col-xs-3">FİRMA İSMİ</h4>
        <h4 class="col-sm-2 col-xs-5">TAMAMLANMA YÜZDESİ</h4>
        <h4 class="col-sm-2 hidden-xs">BAŞLANGIÇ TARİHİ</h4>
        <h4 class="col-sm-2 hidden-xs">BİTİŞ TARİHİ</h4>
        <h4 class="col-sm-1 hidden-xs">DURUM</h4>
        <h4 class="col-sm-1 col-xs-1"></h4>
    </div>
    @foreach (GorevYoneticisi.Models.proje_surec prj in Model)
    {
        <div class="satir clearfix">
            <div class="col-sm-2 col-xs-3">@Html.Raw(prj.isim)</div>
            <div class="col-sm-2 col-xs-3">@Html.Raw(prj.firma_musavir.firma_adi)</div>
            <div class="col-sm-2 col-xs-5"><span class="yuzde"><span class="bar" style="width: @Html.Raw(prj.yuzde+"%;")"></span><span class="yuzde-yazi">@Html.Raw("% " + prj.yuzde)</span></span></div>
            <div class="col-sm-2 hidden-xs">@Html.Raw(prj.baslangic_tarihi.ToString("dd.MM.yyyy"))</div>
            <div class="col-sm-2 hidden-xs">@Html.Raw(prj.bitis_tarihi.ToString("dd.MM.yyyy"))</div>
            <div class="col-sm-1 hidden-xs">@Html.Raw(GorevYoneticisi.Tools.TamamlamaDurumlari.getTamamlamaDurum(prj.durum))</div>
            <div class="col-sm-1 col-xs-1" style="margin-top:-5px;">
                <a id="teklif-button" href="@Html.Raw(Url.Action("ProjeBilgisi", new { id = prj.url }))"><i class="fa fa-pencil" aria-hidden="true"></i></a>
            </div>
        </div>

    }
</div>




